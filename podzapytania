SELECT IMIE,NAZWISKO,PENSJA 
FROM PRACOWNICY
WHERE PENSJA=(SELECT MAX(PENSJA) FROM PRACOWNICY);

SELECT NAZWISKO,PENSJA
FROM PRACOWNICY
WHERE PENSJA >= ALL(SELECT PENSJA
                  FROM PRACOWNICY);
                  
SELECT NAZWA,(SELECT COUNT(*)
              FROM PRACOWNICY 
               WHERE PRACOWNICY.ID_DZIALU = DZIALY.ID_DZIALU )
               AS LICZBA_PRAC
FROM DZIALY;

SELECT NAZWA,(SELECT COUNT(*)
              FROM PRACOWNICY p
               WHERE p.ID_DZIALU = d.ID_DZIALU )
               AS LICZBA_PRAC
FROM DZIALY d;
